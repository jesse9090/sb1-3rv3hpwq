---
// src/components/Header.astro
import { NavLink } from './NavLink.astro'; // Assuming you have a NavLink component
const { siteTitle = "YourSite" } = Astro.props;
---
<header class="bg-white shadow-md">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <div class="flex items-center">
      <a href="/" class="text-xl font-bold text-primary">{siteTitle}</a>
    </div>
    <div class="hidden md:flex space-x-6">
      <NavLink href="/">Home</NavLink>
      <NavLink href="/services">Services</NavLink>
      <NavLink href="/portfolio">Portfolio</NavLink>
      <NavLink href="/about">About</NavLink>
      <NavLink href="/contact">Contact</NavLink> <!-- Ensure this link is correct -->
      <NavLink href="/blog">Blog</NavLink>
    </div>
    <!-- Mobile Menu (Optional) -->
    <div class="md:hidden">
      <!-- Implement mobile menu toggle if needed -->
    </div>
  </nav>
</header>
