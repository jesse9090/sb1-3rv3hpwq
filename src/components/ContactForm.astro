---
const { action = "#", method = "POST" } = Astro.props;
---
<form action={action} method={method} class="bg-white shadow rounded p-6">
  <div class="mb-4">
    <label for="name" class="block font-semibold mb-1">Name</label>
    <input id="name" name="name" type="text" required class="border w-full p-2 rounded" />
  </div>
  <div class="mb-4">
    <label for="email" class="block font-semibold mb-1">Email</label>
    <input id="email" name="email" type="email" required class="border w-full p-2 rounded" />
  </div>
  <div class="mb-4">
    <label for="message" class="block font-semibold mb-1">Message</label>
    <textarea id="message" name="message" rows="4" required class="border w-full p-2 rounded"></textarea>
  </div>
  <button type="submit" class="bg-primary text-white px-6 py-2 rounded">Send Message</button>
</form>
