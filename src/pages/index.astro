---
import MainLayout from '../layouts/MainLayout.astro';

const pageTitle = "Get Your Restaurant or Bar Online in Less Than 2 Weeks!";
const pageDescription = "Custom websites with online ordering, reservations, and social media integration.";
---

<MainLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
<head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-800">
    <!-- Header / Navigation -->
    <header class="bg-white shadow-sm">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
        <div>
          <a href="/" class="text-xl font-bold text-primary">WebKitchen</a>
        </div>
        <div class="hidden sm:flex space-x-6">
          <a href="/" class="hover:text-primary">Home</a>
          <a href="/services" class="hover:text-primary">Services</a>
          <a href="/portfolio" class="hover:text-primary">Portfolio</a>
          <a href="/about" class="hover:text-primary">About</a>
          <a href="/contact" class="hover:text-primary">Contact</a>
          <a href="/blog" class="hover:text-primary">Blog</a>
        </div>
      </nav>
    </header>
            View Our Packages
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Value Proposition Section -->
  <section class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h2 class="text-primary font-semibold tracking-wide uppercase mb-4">Benefits</h2>
      <p class="text-3xl font-extrabold text-gray-900 mb-8">
        Why Choose WebKitchen?
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="font-bold text-xl mb-2">Boost Revenue</h3>
          <p>Offer online ordering and cater to more customers.</p>
        </div>
        <div>
          <h3 class="font-bold text-xl mb-2">Professional Presence</h3>
          <p>Showcase your restaurant with a modern web design.</p>
        </div>
        <div>
          <h3 class="font-bold text-xl mb-2">Easy Updates</h3>
          <p>Update your menu, events, or promotions quickly.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Additional sections can be added here with correct links -->
  
</MainLayout>
