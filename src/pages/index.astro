---
import MainLayout from '../layouts/MainLayout.astro';

const pageTitle = "Get Your Restaurant or Bar Online in Less Than 2 Weeks!";
const pageDescription = "Custom websites with online ordering, reservations, and social media integration.";
---

<MainLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-white">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-20 lg:px-8">
      <div class="lg:text-left">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl mb-4">
          {pageTitle}
        </h1>
        <p class="text-gray-600 text-lg mb-6 sm:max-w-xl">
          {pageDescription}
        </p>
        <div class="flex space-x-4">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-3 bg-primary text-white rounded-md hover:bg-secondary"
          >
            Get a Free Quote
          </a>
          <a
            href="/services"
            class="inline-flex items-center justify-center px-8 py-3 border border-primary text-primary rounded-md hover:bg-gray-100"
          >
            View Our Packages
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Value Proposition Section -->
  <section class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h2 class="text-primary font-semibold tracking-wide uppercase mb-4">Benefits</h2>
      <p class="text-3xl font-extrabold text-gray-900 mb-8">
        Why Choose WebKitchen?
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="font-bold text-xl mb-2">Boost Revenue</h3>
          <p>Offer online ordering and cater to more customers.</p>
        </div>
        <div>
          <h3 class="font-bold text-xl mb-2">Professional Presence</h3>
          <p>Stand out with a modern, mobile-friendly website.</p>
        </div>
        <div>
          <h3 class="font-bold text-xl mb-2">Better Visibility</h3>
          <p>Improve local SEO and engage fans on social media.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Step-by-Step Process -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-2xl font-bold mb-6 text-center">Our 3-Step Process</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="flex flex-col items-center space-y-3">
          <div class="text-primary text-3xl font-bold">1</div>
          <h3 class="font-semibold">Consult</h3>
          <p>We discuss your goals and collect all necessary details.</p>
        </div>
        <div class="flex flex-col items-center space-y-3">
          <div class="text-primary text-3xl font-bold">2</div>
          <h3 class="font-semibold">Build</h3>
          <p>Our team designs & develops your website with custom features.</p>
        </div>
        <div class="flex flex-col items-center space-y-3">
          <div class="text-primary text-3xl font-bold">3</div>
          <h3 class="font-semibold">Launch</h3>
          <p>We deploy your site and guide you on how to manage it.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold mb-6">What Our Clients Say</h2>
      <p class="italic mb-4">“We increased our online orders by 50% within the first month!”</p>
      <p class="text-sm font-semibold">— Owner, City Bistro</p>
    </div>
  </section>

  <!-- Trust Badges -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <p class="mb-4 text-lg font-bold">Trusted by over 50 restaurants and bars</p>
      <p class="mb-4 text-lg font-bold">100% Satisfaction Guarantee</p>
    </div>
  </section>
</MainLayout>
