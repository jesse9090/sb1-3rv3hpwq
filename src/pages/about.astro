---
import MainLayout from '../layouts/MainLayout.astro';
const pageTitle = "About Us";
---

<MainLayout title={pageTitle}>
  <section class="py-12 max-w-7xl mx-auto px-4">
    <h1 class="text-3xl font-bold mb-6">Who We Are</h1>
    <p class="text-lg mb-8">
      Our mission is to help local restaurants and bars thrive in the digital world.
    </p>

    <!-- Why Choose Us -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-4">Why Choose WebKitchen?</h2>
      <p class="mb-4">
        We focus exclusively on the restaurant and bar industry. We understand your unique challenges and tailor our solutions for maximum impact.
      </p>
    </div>

    <!-- Team Section -->
    <div class="mb-8 bg-white shadow rounded p-6">
      <h2 class="text-xl font-semibold mb-4">Meet the Team</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <div class="text-center">
          <img src="/images/team-member.jpg" alt="Team member" class="mx-auto w-24 h-24 rounded-full" />
          <h3 class="font-semibold mt-2">Taylor (Project Manager)</h3>
        </div>
        <div class="text-center">
          <img src="/images/team-member2.jpg" alt="Team member" class="mx-auto w-24 h-24 rounded-full" />
          <h3 class="font-semibold mt-2">Jordan (Lead Developer)</h3>
        </div>
        <div class="text-center">
          <img src="/images/team-member3.jpg" alt="Team member" class="mx-auto w-24 h-24 rounded-full" />
          <h3 class="font-semibold mt-2">Alex (Design Expert)</h3>
        </div>
      </div>
    </div>

    <!-- Trust Metrics -->
    <div class="text-center">
      <p class="mb-2">Over 50 restaurants served</p>
      <p class="mb-2">10+ years of combined experience in web development & marketing</p>
      <p class="mb-2">Average website delivery in under 10 days</p>
    </div>
  </section>
</MainLayout>
