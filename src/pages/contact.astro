---
import MainLayout from '../layouts/MainLayout.astro';
const pageTitle = "Contact Us";
---

<MainLayout title={pageTitle}>
  <section class="py-12 max-w-7xl mx-auto px-4">
    <h1 class="text-3xl font-bold mb-6">Ready to Elevate Your Restaurant? Contact Us Today!</h1>
    <p class="text-lg mb-8">Fill out the form below or reach us directly by phone or email.</p>

    <!-- Contact Form -->
    <form class="bg-white shadow rounded p-6 mb-8" method="POST" action="#">
      <div class="mb-4">
        <label for="name" class="block font-semibold mb-1">Name</label>
        <input id="name" name="name" type="text" required class="border w-full p-2 rounded" />
      </div>
      <div class="mb-4">
        <label for="email" class="block font-semibold mb-1">Email</label>
        <input id="email" name="email" type="email" required class="border w-full p-2 rounded" />
      </div>
      <div class="mb-4">
        <label for="phone" class="block font-semibold mb-1">Phone</label>
        <input id="phone" name="phone" type="tel" class="border w-full p-2 rounded" />
      </div>
      <div class="mb-4">
        <label for="restaurantName" class="block font-semibold mb-1">Restaurant/Bar Name</label>
        <input id="restaurantName" name="restaurantName" type="text" class="border w-full p-2 rounded" />
      </div>
      <div class="mb-4">
        <label for="serviceInterest" class="block font-semibold mb-1">Service of Interest</label>
        <select id="serviceInterest" name="serviceInterest" class="border w-full p-2 rounded">
          <option value="Website Design">Website Design</option>
          <option value="Online Ordering">Online Ordering</option>
          <option value="Reservations">Reservations</option>
          <option value="SEO">SEO</option>
          <option value="Other">Other</option>
        </select>
      </div>
      <button type="submit" class="bg-primary text-white px-6 py-2 rounded">Submit</button>
    </form>

    <!-- Contact Info -->
    <div class="flex flex-col space-y-4">
      <p><strong>Phone:</strong> <a href="tel:1234567890">123-456-7890</a></p>
      <p><strong>Email:</strong> <a href="mailto:info@webkitchen.com">info@webkitchen.com</a></p>
    </div>

    <!-- Embedded Map (Optional) -->
    <div class="mt-8">
      <iframe
        src="https://www.google.com/maps/embed?..."
        width="100%"
        height="300"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
      ></iframe>
    </div>
  </section>
</MainLayout>
