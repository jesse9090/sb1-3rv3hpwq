---
import MainLayout from '../layouts/MainLayout.astro';
const pageTitle = "Testimonials";
---

<MainLayout title={pageTitle}>
  <section class="py-12 max-w-7xl mx-auto px-4">
    <h1 class="text-3xl font-bold mb-6">What Our Clients Say</h1>

    <!-- Video or Quote Testimonials -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-white p-6 shadow rounded">
        <p class="italic mb-2">"Our new site is fantastic. We’ve seen a clear boost in online reservations."</p>
        <p class="text-sm font-semibold">– Owner, The Tap House</p>
      </div>
      <div class="bg-white p-6 shadow rounded">
        <p class="italic mb-2">"Customers love placing orders through the website. It’s been a game-changer for us."</p>
        <p class="text-sm font-semibold">– Manager, Green Garden</p>
      </div>
      <!-- Add videos, more quotes, or a carousel as needed -->
    </div>

    <!-- Logo Showcase (Optional) -->
    <div class="mt-8 text-center">
      <p class="mb-4 font-semibold">Some of the restaurants and bars we've worked with:</p>
      <div class="flex justify-center space-x-6">
        <!-- Replace with actual logos -->
        <img src="/images/logo1.png" alt="Restaurant Logo 1" class="w-20 h-auto" />
        <img src="/images/logo2.png" alt="Restaurant Logo 2" class="w-20 h-auto" />
        <img src="/images/logo3.png" alt="Restaurant Logo 3" class="w-20 h-auto" />
      </div>
    </div>
  </section>
</MainLayout>
